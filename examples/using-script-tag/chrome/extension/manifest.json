{
  "manifest_version": 2,

  "name": "PageCatch",
  "description": "Chrome extension for saving current webpage into one HTML file including all resources",
  "version": "0.2.5",
  "icons": {
     "128": "img/icon128-96.png",
     "16": "img/icon16.png",
     "32": "img/icon32.png",
     "48": "img/icon48.png"
  },


  "background": {
    "persistent": false,
    "scripts": [
      "page-catch.js",
      "FileSaver.min.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_title": "Click here to save current page!"
  },

  "permissions": [
    "management",
    "tabs",
    "http://*/",
    "https://*/",
    "file://*",
    "activeTab"
  ]
}
